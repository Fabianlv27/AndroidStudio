                android:layout_height="70dp"
                android:layout_weight="1"></TextView>

            <ImageView
                android:id="@+id/img1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/usa"></ImageView>

            <ImageView
                android:id="@+id/img2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/cee"></ImageView>

            <ImageView
