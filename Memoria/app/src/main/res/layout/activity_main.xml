                android:maxHeight="20px"
                android:minHeight="20px"
                app:srcCompat="@drawable/logo" />

            <ImageView
                android:id="@+id/i_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:maxHeight="20px"
                android:minHeight="20px"
