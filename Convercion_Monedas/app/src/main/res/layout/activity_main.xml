<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <android.widget.LinearLayout
        android:id="@+id/table_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <!-- ===== FILA DE BANDERAS ===== -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <View
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/flag_usa"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:src="@drawable/usa"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/flag_cee"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:src="@drawable/cee"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/flag_japon"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:src="@drawable/japon"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/flag_ingla"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:src="@drawable/ingla"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />
</LinearLayout>

<!-- ===== FILA 1: ENCABEZADOS ===== -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/empty_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/header_dolar"
        android:text="Dólar"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/header_euro"
        android:text="Euro"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/header_yen"
        android:text="Yen"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/header_libra"
        android:text="Libra"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>

<!-- ===== FILA 2: DÓLAR ===== -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/row_dolar"
        android:text="Dólar"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_0_0"
        android:hint="1.00"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_0_1"
        android:hint="€"
        android:text="0.86"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_0_2"
        android:hint="¥"
        android:text="153.53"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_0_3"
        android:hint="£"
        android:text="0.76"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>

<!-- ===== FILA 3: EURO ===== -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/row_euro"
        android:text="Euro"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_1_0"
        android:hint="$"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_1_1"
        android:hint="1.00"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_1_2"
        android:hint="¥"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_1_3"
        android:hint="£"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>

<!-- ===== FILA 4: YEN ===== -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/row_yen"
        android:text="Yen"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_2_0"
        android:hint="$"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_2_1"
        android:hint="€"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_2_2"
        android:hint="1.00"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_2_3"
        android:hint="£"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>

<!-- ===== FILA 5: LIBRA ===== -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/row_libra"
        android:text="Libra"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_3_0"
        android:hint="$"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_3_1"
        android:hint="€"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_3_2"
        android:hint="¥"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/eq_3_3"
        android:hint="1.00"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>
    </android.widget.LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
